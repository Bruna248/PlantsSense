<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlantsMC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color representing the lush green of leaves. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color inspired by the color of soil or tree bark. -->
        <item name="colorSecondary">@color/brown_200</item>
        <item name="colorSecondaryVariant">@color/brown_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color for a natural, earthy look. -->
        <item name="android:windowBackground">@color/off_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- Button styles -->
        <item name="buttonStyle">@style/PlantButtonStyle</item>
    </style>

    <!-- Custom Button Style -->
    <style name="PlantButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>