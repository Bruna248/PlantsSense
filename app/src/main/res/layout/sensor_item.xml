<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/plant_item_background"
    android:gravity="center_vertical">

    <!-- Sensor Item -->
    <TextView
        android:id="@+id/sensorNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:textColor="@color/brown_200"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Sensor Value -->
    <TextView
        android:id="@+id/sensorValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/brown_700"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Actuator Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/actuatorSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/brown_700"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />


</LinearLayout>