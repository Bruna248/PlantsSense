<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/greenhouse_item_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewSensor"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/thermometer_temperature_svgrepo_com" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Row for the sensor name and value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SensorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SensorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="--"
                android:textColor="#1DD08F"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row for the updated date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SensorTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#0E0E0E"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
