<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green_strong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top Bar
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/greenhouseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Field Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/field_image_plant_detail"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/Round10"
                tools:src="@drawable/field1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plantNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Name"
                    android:textColor="#F6F0F0"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plantGreenhouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Greenhouse"
                    android:textColor="#F3EFEF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fieldCreationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added Date"
                    android:textColor="#F3EFEF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/CreationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#F3EFEF"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- TabLayout - Sensors and Plants -->

        <TextView
            android:id="@+id/Plant_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Plant Description"
            android:textColor="#F3EFEF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:isScrollContainer="true"
            app:cardBackgroundColor="#EDEDED"
            app:cardCornerRadius="45dp"
            app:layout_constraintBottom_toTopOf="@+id/savePlantButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

            <EditText
                android:id="@+id/textDescriptionPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:layout_marginVertical="3dp"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/plant_Notes"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:backgroundTint="#1DD08F"
            android:text="Edit Plant"
            android:textSize="12sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/Sensors_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sensors"
            android:textColor="#F3EFEF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photoRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" /> -->
        <Button
            android:id="@+id/addGreenhouseButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#1DD08F"
            android:text="Add Sensor"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center"
/>

        <Button
            android:id="@+id/Plant_Notes"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#1DD08F"
            android:text="Plant Notes"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</ScrollView>





