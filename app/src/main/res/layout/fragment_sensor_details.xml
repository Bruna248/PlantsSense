<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9D2C6"> <!-- Set the background color to the specified hex color -->

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Details"
        android:textColor="#F0ECEC"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/top_view"
        app:layout_constraintTop_toTopOf="@+id/top_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_view">


        <View
            android:id="@+id/view5"
            android:layout_width="330dp"
            android:layout_height="420dp"
            android:background="@drawable/sensor_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewSensorTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="Temperature:"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageViewSensor"
            app:layout_constraintTop_toTopOf="@+id/imageViewSensor" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Date:"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewSensor"
            app:layout_constraintStart_toStartOf="@+id/textViewSensorTypeDetails" />


        <ImageView
            android:id="@+id/imageViewSensor"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/thermometer_temperature_svgrepo_com"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toTopOf="@+id/view5" />


        <TextView
            android:id="@+id/textViewSensorValueDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="--"
            app:layout_constraintStart_toEndOf="@+id/textViewSensorTypeDetails"
            app:layout_constraintTop_toTopOf="@+id/textViewSensorTypeDetails" />

        <TextView
            android:id="@+id/textViewSensorDateDetails"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="--/--/----"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
            app:layout_constraintStart_toEndOf="@+id/textViewDate" />

        <TextView
            android:id="@+id/textViewSensorGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="Graph"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSensor" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_marginBottom="309dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintStart_toStartOf="@+id/view5"
            app:layout_constraintTop_toBottomOf="@+id/textViewSensorGraph">

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="175dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/top_view112"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/sensor_small_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/addSensorDetailsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Notification Threshold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/top_view112"
            app:layout_constraintStart_toStartOf="@+id/top_view112"
            app:layout_constraintTop_toTopOf="@+id/top_view112" />

        <Switch
            android:id="@+id/switchSensorDetailsNotificationThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/top_view112"
            app:layout_constraintEnd_toEndOf="@+id/top_view112"
            app:layout_constraintStart_toEndOf="@+id/top_view115" />

        <View
            android:id="@+id/top_view115"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/sensor_rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/top_view112"
            app:layout_constraintEnd_toStartOf="@+id/switchSensorDetailsNotificationThreshold"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/top_view112" />

        <EditText
            android:id="@+id/editSensorDetailsNotificationThreshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:inputType="text"
            android:text="--"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/top_view115"
            app:layout_constraintEnd_toEndOf="@+id/top_view115"
            app:layout_constraintStart_toStartOf="@+id/top_view115"
            app:layout_constraintTop_toTopOf="@+id/top_view115" />


        <Button
            android:id="@+id/addSensorDetailsButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:backgroundTint="#1DD08F"
            android:text="Apply"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>